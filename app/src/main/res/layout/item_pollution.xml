<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:padding="16dp">

        <!-- Indicateur de couleur pour le niveau de pollution -->
        <View
            android:id="@+id/viewColorIndicator"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:background="#00E400"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nom de la localisation -->
        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Paris, France"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/textViewAQI"
            app:layout_constraintStart_toEndOf="@id/viewColorIndicator"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Paris, France" />

        <!-- Badge AQI -->
        <TextView
            android:id="@+id/textViewAQI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:padding="8dp"
            android:text="AQI: 2"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="AQI: 2" />

        <!-- Status de pollution -->
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Bon"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewColorIndicator"
            app:layout_constraintTop_toBottomOf="@id/textViewLocation"
            tools:text="Bon" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewColorIndicator"
            app:layout_constraintTop_toBottomOf="@id/textViewStatus" />

        <!-- PM2.5 -->
        <TextView
            android:id="@+id/labelPM25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="PM2.5:"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/viewColorIndicator"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/textViewPM25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="12.5 μg/m³"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/labelPM25"
            app:layout_constraintTop_toTopOf="@id/labelPM25"
            tools:text="12.5 μg/m³" />

        <!-- PM10 -->
        <TextView
            android:id="@+id/labelPM10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="PM10:"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/textViewPM25"
            app:layout_constraintTop_toTopOf="@id/labelPM25" />

        <TextView
            android:id="@+id/textViewPM10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="25.3 μg/m³"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/labelPM10"
            app:layout_constraintTop_toTopOf="@id/labelPM10"
            tools:text="25.3 μg/m³" />

        <!-- NO2 -->
        <TextView
            android:id="@+id/labelNO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="NO2:"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/viewColorIndicator"
            app:layout_constraintTop_toBottomOf="@id/labelPM25" />

        <TextView
            android:id="@+id/textViewNO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="40.2 μg/m³"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/labelNO2"
            app:layout_constraintTop_toTopOf="@id/labelNO2"
            tools:text="40.2 μg/m³" />

        <!-- O3 -->
        <TextView
            android:id="@+id/labelO3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="O3:"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/textViewNO2"
            app:layout_constraintTop_toTopOf="@id/labelNO2" />

        <TextView
            android:id="@+id/textViewO3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="80.1 μg/m³"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/labelO3"
            app:layout_constraintTop_toTopOf="@id/labelO3"
            tools:text="80.1 μg/m³" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
